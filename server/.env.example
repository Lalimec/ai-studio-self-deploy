# AI Studio Server Environment Variables
# Copy this file to .env and fill in your values

# ============================================================
# GEMINI API KEY (Required)
# ============================================================
GEMINI_API_KEY=your_gemini_api_key_here
API_KEY=your_gemini_api_key_here

# ============================================================
# FIREBASE ADMIN SDK (Required for Authentication)
# ============================================================
# Option 1: Path to service account JSON file (Local development)
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Option 2: Inline service account JSON (Cloud Run production)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# ============================================================
# ACCESS CONTROL (Optional)
# ============================================================
# Comma-separated list of allowed email domains
ALLOWED_DOMAINS=lyrebirdstudio.net

# Allow external users (not in ALLOWED_DOMAINS)
ALLOW_EXTERNAL=false

# ============================================================
# SERVER CONFIGURATION (Optional)
# ============================================================
PORT=3000

# ============================================================
# NOTES
# ============================================================
# 1. NEVER commit .env to git (it's in .gitignore)
# 2. Get service account JSON from Firebase Console
# 3. See .docs/FIREBASE_SETUP.md for setup instructions
